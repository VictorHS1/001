
public class Principal {

	public static void main(String[] args) {
			
		Quadrado1 PrimeiroQuadrado = new Quadrado1();
		
		PrimeiroQuadrado.base = 12;
		PrimeiroQuadrado.altura = 6;
		
		System.out.println("A �rea do quadrado �: "+PrimeiroQuadrado.calcular(12*6));
		
		Quadrado1 SegundoQuadrado = new Quadrado1();
		
		SegundoQuadrado.base = 20;
		SegundoQuadrado.altura = 15;
		
		System.out.println("A �rea do quadrado �: "+SegundoQuadrado.calcular(20*15));
	}

}



public class Quadrado1 {

	double base;
	double altura;
	double area;
	
	 double calcular(double area){
	
		return area = base*altura;
	 }
}

